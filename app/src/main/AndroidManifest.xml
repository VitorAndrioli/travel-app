<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.traveltrack.vitor.travelapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Orcamentour"
        tools:replace="android:icon,android:theme" >
        <meta-data
            android:name="DATABASE"
            android:value="orcamentour.db" />
        <meta-data
            android:name="VERSION"
            android:value="2" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.traveltrack.vitor.travelapp" />

        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".TravelIndexActivity"
            android:label="@string/title_activity_travels"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TravelActivity"
            android:label="@string/title_activity_travel" >
        </activity>
        <activity
            android:name=".NewTravelActivity"
            android:label="@string/title_activity_new_travel"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".NewExpenseActivity"
            android:label="@string/title_activity_new_expense" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".ExpensesGraphActivity"
            android:label="@string/title_activity_graph" >
        </activity>
        <activity
            android:name=".TravelsGraphActivity"
            android:label="@string/title_activity_travels_graph" >
        </activity>
        <activity
            android:name=".CategoriesActivity"
            android:label="@string/title_activity_categories" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".EditTravelActivity"
            android:label="@string/title_activity_edit_travel" >
        </activity>
        <activity
            android:name=".EditExpenseActivity"
            android:label="@string/title_activity_edit_expense" >
        </activity>
    </application>

</manifest>
