<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context="com.traveltrack.vitor.orcamentour.TravelIndexActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:layout_marginTop="@dimen/header_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_above="@+id/footer"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/alimentation_big"
                android:scaleType="centerInside"
                android:background="@color/dark_blue"
                android:layout_marginRight="5dp"
                android:onClick="chooseCategory"
                android:tag="alimentation"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/accommodation_big"
                android:scaleType="centerInside"
                android:background="@color/dark_blue"
                android:layout_marginLeft="5dp"
                android:onClick="chooseCategory"
                android:tag="accommodation"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/transportation_big"
                android:scaleType="centerInside"
                android:background="@color/dark_blue"
                android:layout_marginRight="5dp"
                android:onClick="chooseCategory"
                android:tag="transportation"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/leisure_big"
                android:scaleType="centerInside"
                android:background="@color/dark_blue"
                android:layout_marginLeft="5dp"
                android:onClick="chooseCategory"
                android:tag="leisure"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/passage_big"
                android:scaleType="centerInside"
                android:background="@color/dark_blue"
                android:layout_marginRight="5dp"
                android:onClick="chooseCategory"
                android:tag="passage"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/other_big"
                android:scaleType="centerInside"
                android:background="@color/dark_blue"
                android:layout_marginLeft="5dp"
                android:onClick="chooseCategory"
                android:tag="other"/>

        </LinearLayout>

    </LinearLayout>

    <fragment android:id="@+id/header"
        android:name="com.traveltrack.vitor.orcamentour.HeaderFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_header" />

    <fragment android:id="@+id/footer"
        android:name="com.traveltrack.vitor.orcamentour.TravelFooterFragment"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/footer_height"
        tools:layout="@layout/fragment_travel_footer" />

</RelativeLayout>
